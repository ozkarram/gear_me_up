<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#2980b9" />
            <stroke
                android:width="0dp"
                android:color="#2980b9" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#3498db"
                android:endColor="#3498db"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#3498db" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>